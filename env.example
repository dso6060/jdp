# Environment Variables for Justice Definitions Project Extension
# Copy this file to .env and fill in your actual values

# Webhook Configuration
WEBHOOK_URL=https://script.google.com/macros/s/YOUR_SCRIPT_ID/exec
WEBHOOK_ACCESS_KEY=your_secure_access_key_here

# API Configuration
API_URL=https://jdc-definitions.wikibase.wiki/w/api.php
API_TIMEOUT=15000

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=30
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Display Configuration
MAX_CHARS=140
EXTENDED_CHARS=200
MAX_EXTENDED_CHARS=250
MIN_WORD_COUNT=4

# Security Configuration
ENABLE_RATE_LIMITING=true
ENABLE_ACCESS_KEY_VALIDATION=true
LOG_REQUESTS=true
